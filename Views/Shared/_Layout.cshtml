<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Motosfera</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar sticky-top navbar-expand-lg bg-dark border-bottom border-body fs-3" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navContent">
                    <div class="navbar-nav">
                        <a asp-controller="Post" asp-action="Index" class="nav-link nav-item text-white">Motosfera</a>
                        <a asp-controller="Post" asp-action="Index" class="nav-link nav-item text-white">Posty</a>
                        @if (User.IsInRole("Admin"))
                        {
                                <form asp-controller="Post" asp-action="Create" method="post" class="mx-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning">Twórz</button>
                                </form>
                         
                                <form asp-controller="Account" asp-action="Logout" method="post" class="mx-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Wyloguj</button>
                                </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
	</header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-white small">
        <div class="container text-center">
            &copy; 2025 - Motosfera - Aleksander Grajzer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
